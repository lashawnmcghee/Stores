<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_list_item_gradient">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/iv_logo"
        android:padding="2dp"
        android:layout_centerVertical="true"
        android:background="@drawable/left_rounded_white"
        android:src="@drawable/kohls"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/iv_logo"
        android:orientation="vertical"
        android:background="@drawable/right_store_item_selector">

        <TextView
            android:id="@+id/tv_phone"
            android:paddingStart="10dp"
            android:text="@string/phone"
            style="@style/StoreListTextStyle"/>

        <TextView
            android:id="@+id/tv_address"
            android:paddingStart="10dp"
            android:text="@string/address"
            style="@style/StoreListTextStyle"/>

    </LinearLayout>

</RelativeLayout>